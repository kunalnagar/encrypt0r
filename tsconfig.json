{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6", "DOM"],
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
